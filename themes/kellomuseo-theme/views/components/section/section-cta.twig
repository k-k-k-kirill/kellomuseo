{% extends 'section/section.twig' %}

{% block section_classes %}{% endblock %}

{% block section_content %}
    <div class="container-fluid section-hero__container py-8 py-lg-16" style="background-image: url({{TimberImage(section.background).src}});">
        {% if section.background_overlay %}
            <div class="section-hero__overlay"></div>
        {% endif %}

        <div class="row">
            <div class="col-lg-10 offset-lg-1 text-center">
                {% if section.title %}
                    <h1 class="large-heading text-white text-center">{{section.title}}</h1>
                {% endif %}

                <div class="text-white">
                    {{section.content}}
                </div>

                {% if section.link.title and section.link.url %}
                    <a class="btn btn--large btn--light mt-3" href="{{section.link.url}}">{{section.link.title}}</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}